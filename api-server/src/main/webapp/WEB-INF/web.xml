<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>Api Server</display-name>
	
	<context-param>
		<param-name>appConfigLocation</param-name>
		<param-value>classpath:config/appConfig.properties</param-value>
	</context-param>
	
	<listener>
		<listener-class>com.baroque.api.config.AppConfigListener</listener-class>
	</listener>

    <filter>
        <filter-name>api-dispatch-filter</filter-name>
        <filter-class>com.baroque.api.core.ApiDispatchFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>api-dispatch-filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
	
	<servlet>
		<servlet-name>add-servlet</servlet-name>
		<servlet-class>com.baroque.api.demo.web.IntegerAddServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>add-servlet</servlet-name>
		<url-pattern>/add</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>regi-servlet</servlet-name>
		<servlet-class>com.baroque.api.demo.web.RegisterServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>regi-servlet</servlet-name>
		<url-pattern>/regi</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.jsp</welcome-file>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
